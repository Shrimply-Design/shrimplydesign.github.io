---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home - Shrimply Design" description="Welcome to Shrimply Design - Artist Portfolio">
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1>Welcome to Shrimply Design</h1>
        <p class="hero-subtitle">Creating Beautiful Art & Design</p>
        <p class="hero-description">
          Explore a curated collection of artistic works, from digital illustrations 
          to traditional paintings. Each piece tells a unique story.
        </p>
        <div class="cta-buttons">
          <a href="/portfolio" class="btn btn-primary">View Portfolio</a>
          <a href="/contact" class="btn btn-secondary">Get In Touch</a>
        </div>
      </div>
    </div>
  </section>

  <section class="featured">
    <div class="container">
      <h2>Featured Works</h2>
      <div class="featured-grid">
        <div class="featured-item">
          <div class="featured-placeholder">
            <span>Artwork 1</span>
          </div>
          <h3>Abstract Dreams</h3>
          <p>Digital Art, 2024</p>
        </div>
        <div class="featured-item">
          <div class="featured-placeholder">
            <span>Artwork 2</span>
          </div>
          <h3>Ocean Serenity</h3>
          <p>Watercolor, 2024</p>
        </div>
        <div class="featured-item">
          <div class="featured-placeholder">
            <span>Artwork 3</span>
          </div>
          <h3>Urban Landscapes</h3>
          <p>Mixed Media, 2024</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    position: relative;
    padding: 8rem 0 6rem;
    text-align: center;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -10%;
    width: 120%;
    height: 150%;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.1) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .hero h1 {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: fadeInUp 0.8s ease-out;
  }

  .hero-subtitle {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    color: var(--text-color);
    font-weight: 600;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: 3rem;
    color: var(--text-light);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    animation: fadeInUp 0.8s ease-out 0.4s both;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 0.8s ease-out 0.6s both;
  }

  .btn {
    padding: 1rem 2.5rem;
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
    overflow: hidden;
  }

  .btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .btn:hover::before {
    width: 300px;
    height: 300px;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--accent-color) 0%, var(--accent-light) 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(99, 102, 241, 0.4);
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(99, 102, 241, 0.5);
  }

  .btn-secondary {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    color: var(--primary-color);
    border: 2px solid var(--glass-border);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateY(-3px);
    box-shadow: var(--shadow-md);
    border-color: var(--accent-color);
  }

  .featured {
    padding: 5rem 0;
  }

  .featured h2 {
    text-align: center;
    margin-bottom: 4rem;
    color: var(--primary-color);
    font-size: 2.5rem;
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .featured-item {
    text-align: center;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .featured-item:hover {
    transform: translateY(-8px);
  }

  .featured-item:hover .featured-placeholder {
    box-shadow: var(--shadow-lg);
  }

  .featured-placeholder {
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    aspect-ratio: 4/3;
    border-radius: 20px;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 600;
    position: relative;
    overflow: hidden;
    border: 1px solid var(--glass-border);
    box-shadow: var(--shadow-md);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .featured-placeholder::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #f093fb20 0%, #f5576c20 100%);
    opacity: 0.6;
  }

  .featured-placeholder span {
    position: relative;
    z-index: 1;
    color: var(--text-color);
  }

  .featured-item h3 {
    color: var(--primary-color);
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
  }

  .featured-item p {
    color: var(--text-light);
    margin-bottom: 0;
    font-size: 0.95rem;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 5rem 0 3rem;
    }

    .hero h1 {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.25rem;
    }

    .featured-grid {
      grid-template-columns: 1fr;
    }

    .btn {
      padding: 0.875rem 2rem;
    }
  }
</style>
