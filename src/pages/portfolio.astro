---
import Layout from '../layouts/Layout.astro';
import { artworks } from '../data/artwork.json';
import { titleToSlug } from '../utils';
---

<Layout title="Portfolio - Shrimply Design" description="Browse the complete portfolio of Shrimply Design artworks">
  <section class="portfolio-header">
    <div class="container">
      <h1>Portfolio</h1>
      <p>A collection of selected artworks showcasing various styles and mediums</p>
    </div>
  </section>

  <section class="portfolio-gallery">
    <div class="container">
      <div class="gallery-grid">
        {artworks.map((artwork) => (
        <div class="gallery-item">
          <a class="artwork-placeholder" href={`/piece/${titleToSlug(artwork.title)}`}>
            <img src={`/${artwork.url}`} alt={artwork.title} />
          </a>
          <div class="artwork-info">
            <h3>{artwork.title}</h3>
            <p>{artwork.medium} â€¢ {artwork.year}</p>
          </div>
        </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .portfolio-header {
    padding: 5rem 0 3rem;
    text-align: center;
    position: relative;
  }

  .portfolio-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.15) 0%, transparent 70%);
    pointer-events: none;
  }

  .portfolio-header h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .portfolio-header p {
    font-size: 1.25rem;
    color: var(--text-light);
    margin-bottom: 0;
  }

  .portfolio-gallery {
    padding: 3rem 0 5rem;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  .gallery-item {
    cursor: pointer;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .gallery-item:hover {
    transform: translateY(-8px);
  }

  .gallery-item:hover .artwork-placeholder {
    box-shadow: var(--shadow-lg);
  }

  .artwork-placeholder {
    aspect-ratio: 4/3;
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.125rem;
    font-weight: 600;
    text-align: center;
    padding: 1.5rem;
    margin-bottom: 1.25rem;
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    border: 3px solid rgba(255, 255, 255, 0.5);
    text-decoration: none;
  }

  .artwork-placeholder::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .artwork-placeholder > img {
    border-radius: inherit;
  }

  .artwork-placeholder::after {
    position: absolute;
    top: 15px;
    right: 15px;
    font-size: 1.5rem;
    opacity: 0;
    transform: rotate(0deg);
    transition: all 0.3s ease;
  }

  .artwork-placeholder > img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: inherit;
  }

  .gallery-item:hover .artwork-placeholder {
    border-radius: 70% 30% 30% 70% / 60% 40% 60% 40%;
    transform: rotate(-3deg);
  }

  .gallery-item:hover .artwork-placeholder::before {
    opacity: 1;
  }

  .gallery-item:hover .artwork-placeholder::after {
    opacity: 1;
    transform: rotate(15deg);
  }

  .artwork-placeholder span {
    position: relative;
    z-index: 1;
    color: white;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    font-family: 'Caveat', cursive;
    font-size: 1.5rem;
  }

  .artwork-info {
    padding: 0 0.5rem;
  }

  .artwork-info h3 {
    color: var(--primary-color);
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .artwork-info p {
    color: var(--text-light);
    font-size: 0.95rem;
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .portfolio-header h1 {
      font-size: 2.5rem;
    }

    .portfolio-header p {
      font-size: 1.125rem;
    }

    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
