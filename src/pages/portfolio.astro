---
import Layout from '../layouts/Layout.astro';

const artworks = [
  { id: 1, title: 'Abstract Dreams', medium: 'Digital Art', year: 2024, color: '#667eea' },
  { id: 2, title: 'Ocean Serenity', medium: 'Watercolor', year: 2024, color: '#48bb78' },
  { id: 3, title: 'Urban Landscapes', medium: 'Mixed Media', year: 2024, color: '#ed8936' },
  { id: 4, title: 'Nature\'s Symphony', medium: 'Oil Painting', year: 2023, color: '#38b2ac' },
  { id: 5, title: 'Digital Horizons', medium: 'Digital Art', year: 2023, color: '#9f7aea' },
  { id: 6, title: 'Coastal Sunset', medium: 'Acrylic', year: 2023, color: '#f56565' },
  { id: 7, title: 'Mountain Echo', medium: 'Watercolor', year: 2024, color: '#4299e1' },
  { id: 8, title: 'City Nights', medium: 'Mixed Media', year: 2024, color: '#805ad5' },
  { id: 9, title: 'Garden Dreams', medium: 'Digital Art', year: 2023, color: '#48bb78' },
];
---

<Layout title="Portfolio - Shrimply Design" description="Browse the complete portfolio of Shrimply Design artworks">
  <section class="portfolio-header">
    <div class="container">
      <h1>Portfolio</h1>
      <p>A collection of selected artworks showcasing various styles and mediums</p>
    </div>
  </section>

  <section class="portfolio-gallery">
    <div class="container">
      <div class="gallery-grid">
        {artworks.map((artwork) => (
          <div class="gallery-item">
            <div class="artwork-placeholder" style={`background: linear-gradient(135deg, ${artwork.color} 0%, ${artwork.color}dd 100%)`}>
              <span>{artwork.title}</span>
            </div>
            <div class="artwork-info">
              <h3>{artwork.title}</h3>
              <p>{artwork.medium} â€¢ {artwork.year}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .portfolio-header {
    background: var(--primary-color);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .portfolio-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .portfolio-header p {
    font-size: 1.2rem;
    opacity: 0.9;
    margin-bottom: 0;
  }

  .portfolio-gallery {
    padding: 4rem 0;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .gallery-item {
    cursor: pointer;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .gallery-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  .artwork-placeholder {
    aspect-ratio: 4/3;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.1rem;
    font-weight: 600;
    text-align: center;
    padding: 1rem;
    margin-bottom: 1rem;
  }

  .artwork-info {
    padding: 0 0.5rem;
  }

  .artwork-info h3 {
    color: var(--primary-color);
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }

  .artwork-info p {
    color: var(--secondary-color);
    font-size: 0.9rem;
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .portfolio-header h1 {
      font-size: 2rem;
    }

    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
